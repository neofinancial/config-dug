{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
