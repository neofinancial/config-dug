{
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*"]
}
